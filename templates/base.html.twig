<!doctype html>
<html lang="fr">
{% include 'base/head.html.twig' %}

<body>


    {% set panier_count = 0 %}
    {% for r in app.session.get('panier') %}
        {% set panier_count = panier_count + r %}
    {% endfor %}

    <main role="main" class="">

        {% include 'layouts/partials/_flash_messages.html.twig' %}
        
        {% include 'layouts/partials/_menu.html.twig' %}
        
        {% if block('carousel') is defined %}

   
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for key,header in headers %}
                <div class=" carousel-item p-30 {% if key == 0 %}active{% endif %}"
                    style="background-image:linear-gradient(to right,rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url('/assets/uploads/img/header/{{ header.illustration }}'); 
                    background-size:cover;">
    
                    <div class="container">
                        <div class="text-center text-white">
                            <h1>{{ header.title }}</h1>
                            <p>{{ header.content }}</p>
                            <p><a class="btn btn-lg btn-info" href="{{ path('app_product')}}" role="button">{{
                                    header.btnTitle }}</a></p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="home_controls">
                   <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
         

        </div>
        {% endif %}

        <div class="marketing container">
            {% block content %}{% endblock %}
        </div>

        {% include 'base/footer.html.twig' %}
    </main>

</html>