{% set route_name = app.request.attributes.get('_route') %}

<header class=" ">
    <nav class="px-5 navbar navbar-expand-md navbar-dark fixed-top bg-dark ">
        <div class="collapse navbar-collapse">
              <a class="navbar-brand" href="{{ path('home')}}">La boutique française</a>
                          <ul class="navbar-nav mr-auto">
                <li class="nav-item {% if route_name == "app_product" %}active{% endif %}">
                    <a class="nav-link" href="{{ path('app_product')}}">Nos produits </a>
                </li>
                <li class="nav-item {% if route_name == "contact" %}active{% endif %}">
                    <a class="nav-link" href="{{ path('contact') }}">Contact </a>
                </li>
            </ul>
        </div>
      
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">

            {# <form class="form-inline mt-2 mt-md-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Votre recherche" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
            </form> #}
            <div class="navbar-item-custom">
                {% if app.user %}
                 <a href="{{ path('account') }}">Mon compte</a> / <a href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                <a href="{{ path('login') }}">Connexion</a> | <a href="{{ path('register') }}">Inscription</a>
                {% endif %}
            </div>
            <div class="navbar-item-custom navbar-item-cart">
                <a href="{{ path('app_cart')}}"><i class="fa-solid fa-cart-shopping"></i>  {% if panier_count > 0 %}{{panier_count}}{% endif %} </a>
            </div>
        </div>
    </nav>






    
</header>
