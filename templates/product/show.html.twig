{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
<a class="nav-link" href="{{ path('app_product')}}">Retour </a>
<h2 class="title_entry">{{ product.name }}</h2>



<div class="row">
    <div class="col-md-5 text-center">
        <img width="250" src="{{ asset('assets/uploads/img/' ~ product.illustration ) }}" alt="{{ product.name }}" class="img-fluid">
    
        {# <video muted autoplay controls width="200" src="{{ asset('assets/uploads/video/') }}{{ product.video }}"></video> #}
    </div>
    <div class="col-md-7 my-auto">
        <h3>{{ product.name }}</h3>
        <p>{{ product.subtitle }}</p>
        <span class="product-price">{{ (product.price / 100)|number_format(2,',','.')}}€</span>
        <hr>
        <p>{{ product.description }}</p>
       

        <a href="{{ path('add_to_cart', {'id': product.id})}}" class="btn btn-primary">Ajouter au panier</a>

    </div>
</div>
<h3>Nos meilleures ventes</h3>
    <p>Découvrez nos produits du moments</p>
<div class="row">
    
    {% for product in products %}
    <div class="col-md-3">
         {% include "product/single_product.html.twig" %}
    </div>
        
    {% endfor %}
   
</div><!-- /.row -->


{% endblock %}